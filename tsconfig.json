// tsconfig.json

{
    "compilerOptions": {
        /* Language and Project Options */
        "target": "ES2022",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "phpmyadmin",
        "pma_themes",
        ".vscode"
    ]
}